.page-header
  %h1
    %span.glyphicon.glyphicon-inbox
    =t '.title', default: Category.model_name.human.pluralize.titleize
= link_to t('.new', default: t("helpers.links.new")), new_category_path, class:'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th=t '.column.id'# Category.human_attribute_name(:id)
      %th=t '.column.title'#= Category.human_attribute_name(:title)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.id, category_path(category)
        %td= category.title
        %td
          = link_to edit_category_path(category), class:'btn btn-warning' do
            %span.glyphicon.glyphicon-pencil
          = link_to category_path(category), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class:'btn btn-mini btn-danger'do
            %span.glyphicon.glyphicon-trash
