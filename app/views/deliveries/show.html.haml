- model_class = Delivery
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:product_id) + ':'
  %br
  = @delivery.product_id
%p
  %strong= model_class.human_attribute_name(:quantity) + ':'
  %br
  = @delivery.quantity
%p
  %strong= model_class.human_attribute_name(:unit_price) + ':'
  %br
  = @delivery.unit_price

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), deliveries_path, class:'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_delivery_path(@delivery), class:'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), delivery_path(@delivery), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, class:'btn btn-danger'
