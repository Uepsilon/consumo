<h2 class="col-md-10">Login</h2>
<hr  class="col-md-10"/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group col-md-8">
    <span class="col-md-1"><%= f.label :email, t('devise.login.email') %></span>
    <span class="col-md-4"><%= f.email_field :email, autofocus: true, class: 'form-control'  %></span>
  </div>

  <div class="form-group col-md-8">
    <span class="col-md-1"><%= f.label :password, t('devise.login.password') %></span>
    <span class="col-md-4"><%= f.password_field :password, autocomplete: "off", class: 'form-control' %></span>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group col-md-8"><%= f.check_box :remember_me %> <%= f.label :remember_me, t('devise.login.remember_me') %></div>
  <% end -%>

  <div class="form-group col-md-8"><%= f.submit t('devise.login.submit'), class: 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
