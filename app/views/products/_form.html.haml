= form_for @product, :html => { class:'form-horizontal' } do |f|
  - if @product.errors.any?
    %ul.errors
      - @product.errors.full_messages.each do |error|
        %li= error
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class:'form-control'
  .form-group
    = f.label :category, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :category, options_from_collection_for_select(Category.by_position.all, 'id', 'title', @product.category_id), {}, {class: "form-control"}
  .form-group
    = f.label :sku, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :sku, options_from_collection_for_select(Sku.all, 'id', 'title', @product.sku_id), {}, {class: "form-control"}
  .form-group
    = f.label :size, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :size, class:'form-control', data: { behaviour: "format-number" }
  .form-group
    = f.label :picture, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.file_field :picture
  .form-actions
    .col-sm-offset-2.col-sm-10
      = f.submit nil, class:'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, class:'btn'
