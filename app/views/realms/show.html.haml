- model_class = Realm
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @realm.name

.form-actions
  = link_to t('.back', default: t("helpers.links.back")), realms_path, class:'btn'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_realm_path(@realm), class:'btn'
  = link_to t('.destroy', default: t("helpers.links.destroy")), realm_path(@realm), method:  "delete", data:  { confirm:  t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class:'btn btn-danger'
